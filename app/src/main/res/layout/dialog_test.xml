<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="200dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="标题" />

    <TextView
        android:id="@+id/tx_content"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tx_title"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tx_title"
        android:layout_alignStart="@+id/tx_title"
        android:layout_below="@+id/tx_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="cancle" />

        <TextView
            android:id="@+id/tx_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="sure" />

    </LinearLayout>
</RelativeLayout>